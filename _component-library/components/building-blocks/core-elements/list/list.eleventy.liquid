{%- comment -%}
  List - Core element component
  Ordered or unordered list with icon support
{%- endcomment -%}

{%- assign listType = styles.type | default: "unordered" -%}
{%- assign icon = styles.icon -%}
{%- assign iconColor = styles.iconColor -%}

{%- capture listClass -%}
  c-list c-list--{{ listType }}
{%- endcapture -%}

{%- capture iconStyle -%}
  {%- if iconColor %}style="color: {{ iconColor }}"{% endif -%}
{%- endcapture -%}

{%- if content.items.size > 0 -%}
  {%- if listType == "ordered" -%}
    <ol class="{{ listClass | strip }}">
      {%- for item in content.items -%}
        <li>{{ item.text }}</li>
      {%- endfor -%}
    </ol>
  {%- elsif listType == "icon" or listType == "check" -%}
    <ul class="{{ listClass | strip }}">
      {%- for item in content.items -%}
        <li class="c-list__item">
          <span class="c-list__icon" {{ iconStyle }}>
            {%- if listType == "check" -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
            {%- else -%}
              {% bookshop "building-blocks/core-elements/icon" content: icon %}
            {%- endif -%}
          </span>
          <span class="c-list__text">{{ item.text }}</span>
        </li>
      {%- endfor -%}
    </ul>
  {%- else -%}
    <ul class="{{ listClass | strip }}">
      {%- for item in content.items -%}
        <li>{{ item.text }}</li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
{%- else -%}
  <ul class="{{ listClass | strip }}">
    <li>Add list items</li>
  </ul>
{%- endif -%}
