{%- comment -%}
  Testimonial - Core element component
  Quote with author attribution and optional star rating
{%- endcomment -%}

{%- capture alignClass -%}
  {%- case styles.alignX -%}
    {%- when "center" -%}text-center items-center
    {%- else -%}text-left items-start
  {%- endcase -%}
{%- endcapture -%}

<figure class="c-testimonial flex flex-col gap-4 {{ alignClass | strip }}">
  {%- if content.fiveStarRating -%}
    <div class="c-testimonial__stars flex gap-1" aria-label="5 out of 5 stars">
      {%- for i in (1..5) -%}
        <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20" aria-hidden="true">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      {%- endfor -%}
    </div>
  {%- endif -%}

  <blockquote class="c-testimonial__quote text-lg italic">
    <span class="c-testimonial__quote-mark" aria-hidden="true">"</span>{{ content.text }}<span class="c-testimonial__quote-mark" aria-hidden="true">"</span>
  </blockquote>

  <figcaption class="c-testimonial__author flex items-center gap-3">
    {%- if content.authorImage -%}
      <img
        src="{{ content.authorImage }}"
        alt="{{ content.authorName }}"
        class="c-testimonial__avatar w-12 h-12 rounded-full object-cover"
        loading="lazy"
      >
    {%- endif -%}
    <div class="c-testimonial__author-info">
      {%- if content.authorName -%}
        <cite class="c-testimonial__name not-italic font-semibold">{{ content.authorName }}</cite>
      {%- endif -%}
      {%- if content.authorDescription -%}
        <p class="c-testimonial__role text-sm opacity-75">{{ content.authorDescription }}</p>
      {%- endif -%}
    </div>
  </figcaption>
</figure>
