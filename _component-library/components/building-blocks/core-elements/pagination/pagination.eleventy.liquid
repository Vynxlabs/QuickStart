{%- comment -%}
  Pagination - Core element component
  Page navigation for collections and lists
{%- endcomment -%}

{%- assign previousUrl = content.previousUrl -%}
{%- assign nextUrl = content.nextUrl -%}
{%- assign previousLabel = content.previousLabel | default: "Previous" -%}
{%- assign nextLabel = content.nextLabel | default: "Next" -%}
{%- assign currentPage = content.currentPage | default: 1 -%}
{%- assign totalPages = content.totalPages | default: 1 -%}
{%- assign variant = styles.variant | default: "simple" -%}
{%- assign size = styles.size | default: "md" -%}
{%- assign showPageNumbers = styles.showPageNumbers | default: false -%}

{%- capture sizeClass -%}
  {%- case size -%}
    {%- when "sm" -%}c-pagination--sm
    {%- when "md" -%}c-pagination--md
    {%- when "lg" -%}c-pagination--lg
  {%- endcase -%}
{%- endcapture -%}

<nav class="c-pagination c-pagination--{{ variant }} {{ sizeClass | strip }}" aria-label="Pagination">
  <a
    href="{{ previousUrl | default: '#' }}"
    class="c-pagination__btn c-pagination__btn--prev{% unless previousUrl %} c-pagination__btn--disabled{% endunless %}"
    {% unless previousUrl %}aria-disabled="true" tabindex="-1"{% endunless %}
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="c-pagination__icon" aria-hidden="true">
      <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
    </svg>
    <span>{{ previousLabel }}</span>
  </a>

  {%- if showPageNumbers -%}
    <span class="c-pagination__info">
      Page {{ currentPage }} of {{ totalPages }}
    </span>
  {%- endif -%}

  <a
    href="{{ nextUrl | default: '#' }}"
    class="c-pagination__btn c-pagination__btn--next{% unless nextUrl %} c-pagination__btn--disabled{% endunless %}"
    {% unless nextUrl %}aria-disabled="true" tabindex="-1"{% endunless %}
  >
    <span>{{ nextLabel }}</span>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="c-pagination__icon" aria-hidden="true">
      <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
    </svg>
  </a>
</nav>
